<!DOCTYPE html>
{{> header}}

<div class="three columns" id="sidenav">
  <ul>
    <li>
      {{#__}}unav_devices{{/__}}
    </li>
    <li>
      <a href="/ucn/users/account">{{#__}}unav_account{{/__}}</a>
    </li>
    <li>
      <a href="{{vizurl}}">{{#__}}unav_viz{{/__}}</a>
    </li>
    <li>
      <a href="/ucn/auth/logout">{{#__}}header_logout{{/__}}</a>
    </li>
  </ul>
</div>

<div class="thirteen columns">
  <h2>{{#__}}devices_title{{/__}}</h2>

  <p>{{#__}}devices_help{{/__}}</p>

  <div id="rtable" class="condensed">
    <table>
      <thead>
	<tr>
	  <th>{{#__}}devices_name{{/__}}</th>
	  <th>{{#__}}devices_login{{/__}}</th>
	  <th>{{#__}}devices_conn{{/__}}</th>
	  <th>{{#__}}devices_fail{{/__}}</th>
	  <th>{{#__}}devices_laststart{{/__}}</th>
	  <th>{{#__}}devices_lastend{{/__}}</th>
	</tr>
      </thead>
      <tbody>
	{{#devices}}
	<tr>
	  <td>{{devname}}</td>
	  <td>{{login}}</td>
	  <td>{{vpn_connections}}</td>
	  <td>{{vpn_auth_failures}}</td>
          <td>{{vpn_lastconn_start}}</td>
          <td>{{vpn_lastconn_end}}</td>
	</tr>
	{{/devices}}
      </tbody>
    </table>
  </div>
</div>

{{> footer}}

<script src="/ucn/javascripts/jquery.min.js"></script>
</html>
