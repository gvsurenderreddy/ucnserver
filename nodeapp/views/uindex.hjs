<!DOCTYPE html>
{{> header}}

<div class="three columns" id="sidenav">
  <ul>
    <li>
      {{#__}}unav_devices{{/__}}
    </li>
    <li>
      <a href="/ucn/users/account">{{#__}}unav_account{{/__}}</a>
    </li>
    <li>
      <a href="{{vizurl}}/web">{{#__}}unav_viz{{/__}}</a>
    </li>
    <li>
      <a href="/ucn/auth/logout">{{#__}}header_logout{{/__}}</a>
    </li>
  </ul>
</div>

<div class="thirteen columns">
  <h2>{{#__}}devices_title{{/__}}</h2>

  {{#error}}
  <p id="error">
    {{#__}}devices_forget_err{{/__}}
  </p>
  {{/error}}
  {{#success}}
  <p id="success">
    {{#__}}devices_forget_succ{{/__}}
  </p>
  {{/success}}


  <div>
    {{#__}}devices_help{{/__}}
  </div>

  <div id="rtable" class="condensed">
    <table>
      <thead>
      	<tr>
      	  <th>{{#__}}devices_login{{/__}}</th>
      	  <th>{{#__}}devices_lastseen{{/__}}</th>
          <th>{{#__}}devices_forget{{/__}}</th>
          <th></th>
      	</tr>
      </thead>
      <tbody>
      	{{#devices}}
      	<tr>
          <form id="forget" action="/ucn/users" method="post">
      	  <td>{{login}}</td>
          <td>{{last_seen_str}}</td>
          <td>
            <input type="hidden" name="login" value="{{login}}" />
            <select id="forgetlast" name="forgetlast">
              {{#forgetoptions}}  
              <option value="{{value}}">{{name}}</option>
              {{/forgetoptions}}  
            </select>
          </td>
          <td>
            <input type="submit" value="{{#__}}devices_forget_button{{/__}}" name="submitforget" />
          </td>
          </form>
      	</tr>
      	{{/devices}}
      </tbody>
    </table>
  </div>
</div>

{{> footer}}

</body>
</html>