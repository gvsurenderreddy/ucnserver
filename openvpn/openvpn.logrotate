/var/log/openvpn/ucnvpn_tcp.log /var/log/openvpn/ucnvpn_udp.log {
  	daily
  	missingok
  	rotate 7
  	compress
  	delaycompress
  	notifempty
  	sharedscripts
  	postrotate
	        # FIXME: maybe reload is better ... ? this will disconnect clients ...
		[ ! /var/run/openvpn.ucnvpn_tcp.pid ] || /etc/init.d/openvpn restart
  	endscript
}

/var/log/openvpn/script.log {
        daily
        missingok
        rotate 7
        compress
        delaycompress
        notifempty
}
